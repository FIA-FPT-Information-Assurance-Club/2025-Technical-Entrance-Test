<!-- views/index.ejs -->


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom Stylesheet -->
    <link rel="stylesheet" href="/styles.css">
    <!-- Typed.js for typing effect -->
    <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
    <!-- Custom Script for Matrix Effect -->
    <script src="/matrix.js" defer></script>
</head>
<body>
    <!-- Matrix Background Canvas -->
    <canvas id="matrix"></canvas>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg" style="background-color: #000000;">
        <div class="container-fluid">
            <a class="navbar-brand text-emerald" href="/">Avenger Assemble</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" style="filter: invert(100%);"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active text-emerald" aria-current="page" href="#home">Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Home Section with Typing Effect -->
    <section id="home" class="py-5 text-white text-center position-relative" style="background-color: #50C878;">
        <div class="container position-relative z-index-1">
            <h1 class="display-4"><span id="typed"></span></h1>
            <p class="lead">Challenge yourself to uncover hidden secrets within this website.</p>
            <button id="startButton" class="btn btn-glow btn-lg">Start Hunting</button>
        </div>
    </section>

    <!-- Info Section -->
    <section id="info" class="py-5 text-white text-center" style="background-color: #46A76A;">
        <div class="container">
            <h2>Get Ready to Hunt!</h2>
            <p>Use your skills to explore and find the hidden parts of the flag.</p>
        </div>
    </section>

    <!-- Hidden Content Section -->
    <section id="hiddenContent" class="py-5 text-white text-center" style="display: none; background-color: #3D8B57;">
        <div class="container">
            <h2>Let the hunt begin!</h2>
            <p>Find all seven parts of the flag to complete the challenge. Part 1: Just kidding! You thought I'd give it to you in plain sight?</p>
        </div>
    </section>

    <!-- Footer -->
    <footer class="py-3" style="background-color: #000000; color: #FFFFFF; position: relative;">
        <div class="container text-center">
            <p class="mb-0">&copy; Avenger Assemble.</p>
        </div>
        <!-- Hidden Flag Part -->
        <div style="display: none;">
            <!-- part 1: FIA{ju57_k33p_ -->
        </div>
    </footer>

    <!-- Bootstrap Bundle with Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JavaScript -->
    <script src="/app.min.js"></script>
    <!-- Typed.js Initialization -->
    <script>
        var typed = new Typed('#typed', {
            strings: ["<%= typedText %>"],
            typeSpeed: 50,
            backSpeed: 25,
            loop: false,
            showCursor: true,
            cursorChar: '|',
        });
    </script>
</body>
</html>
